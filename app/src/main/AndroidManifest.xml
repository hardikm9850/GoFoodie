<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.gofoodie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:name=".application.GoFoodieApplication"
        android:allowBackup="true"
        android:icon="@drawable/launncher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".activity.derived.DashboardActivity"
            android:icon="@drawable/launncher_icon"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.derived.SplashActivity"
            android:icon="@drawable/launncher_icon"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.derived.LocationActivity"
            android:icon="@drawable/launncher_icon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.derived.SubscriptionActivity"
            android:icon="@drawable/launncher_icon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.derived.EditComboActivity"
            android:label="@string/title_activity_edit_combo"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>