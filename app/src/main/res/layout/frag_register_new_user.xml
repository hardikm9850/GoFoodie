<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen_b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name*"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Last Name (Optional)"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Email*"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Alternate Email (Optional)"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Mobile*"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Alternate Mobile (Optional)"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Password*"
            android:inputType="textPassword"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Confirm Password*"
            android:inputType="textPassword"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@color/colorRed"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_textColorHint="@color/colorWhite"
            app:met_underlineColor="@color/colorRed" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/colorWhite"
            android:paddingLeft="30dp"
            android:text="I accept terms and conditions."
            android:textColor="@color/colorWhite" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login_btn"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="Sign Up"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>